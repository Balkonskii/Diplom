<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.babyprogressmap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@style/MyApp.Theme.Light.NoTitleBar" > -->

        <activity
            android:name="forms.Login"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/MyApp.Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="forms.ChildrenProfile"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/MyApp.Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="forms.Registration"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/MyApp.Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="forms.ChangeChildrenProfile"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="forms.Notes"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="forms.ViewNote"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="forms.EditNote"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="forms.ViewChildrenProfile"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="forms.Notifications"
            android:configChanges="orientation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="forms.EditNotice"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="forms.ChoosingDateForm"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" >
        </activity>

        <receiver
            android:name="AlarmReceiver"
            android:process=":remote" >
        </receiver>
    </application>
